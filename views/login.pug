extends base

block TopBar
    include widgets/_topBarNotLogin

    block MainContent
        .container
            // Outer Row
            .row.justify-content-center
                .col-xl-10.col-lg-12.col-md-9
                    .card.o-hidden.border-0.shadow-lg.my-5
                        .card-body.p-0
                            // Nested Row within Card Body
                            .row
                                .col-lg-6.d-none.d-lg-block.bg-login-image
                                .col-lg-6
                                    .p-5
                                        .text-center
                                            h1.h4.text-gray-900.mb-4 Welcome Back!
                                        form.user.login-form
                                            .form-group
                                                input.form-control.form-control-user(type='email' name='email' id="email" aria-describedby='emailHelp' placeholder='Enter Email Address...')
                                            .form-group
                                                input.form-control.form-control-user(type='password' name='password' id="password" placeholder='Password')
                                            .form-group
                                                button.btn.btn-primary.btn-user.btn-block(type='submit')
                                                    | Login

                                            hr
                                            //- a.btn.btn-facebook.btn-user.btn-block(href='index.html')
                                            //-     i.fab.fa-facebook-f.fa-fw
                                            //-     |  Login with
                                            //-     |                         Facebook
                                        hr
                                        .text-center
                                            a.small(href='/forgotPassword') Forgot Password?
                                        .text-center
                                            a.small(href='/signup') Create an Account!
    block footer
        include widgets/_footer

    script(type='module' src='/js/login.js')
